<Page x:Class="Invoice.Pages.InvoiceMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d" 
      d:DesignHeight="950" d:DesignWidth="1725"
      Title="InvoiceMain">

    <Grid Background="Aquamarine">
        <Grid Background="Transparent" HorizontalAlignment="Left" Height="70" Margin="0,-85,0,0" VerticalAlignment="Top" Width="612" Panel.ZIndex="1">
            <Button x:Name="btnView" Content="View" HorizontalAlignment="Left" Height="60" Margin="0,9,0,0" VerticalAlignment="Top" Width="125" Background="Transparent" Click="btnView_Click"/>
            <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Left" Height="60" Margin="129,9,0,0" VerticalAlignment="Top" Width="125" Background="Transparent" Click="btnCreate_Click"/>
            <Button x:Name="btnEdit" Content="Edit" HorizontalAlignment="Left" Height="60" Margin="259,9,0,0" VerticalAlignment="Top" Width="125" Background="Transparent"/>
            <Button x:Name="btnDelete" Content="Delete" HorizontalAlignment="Left" Height="60" Margin="389,9,0,0" VerticalAlignment="Top" Width="124" Background="Transparent"/>
        </Grid>

        <Grid x:Name="viewTab" Visibility="Visible" Background="White">
            <Border Background="#FFECECEC" HorizontalAlignment="Left" Height="165" VerticalAlignment="Top" Width="1725">
                <Border.Effect>
                    <DropShadowEffect Opacity="0.16"/>
                </Border.Effect>
                <Label x:Name="label" Content="Filter" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,35,0,0" Height="66" Width="134" FontSize="36"/>
            </Border>

            <Grid Background="White" HorizontalAlignment="Left" Height="140" Margin="200,10,0,0" VerticalAlignment="Top" Width="1011">
                <Grid.Effect>
                    <DropShadowEffect Opacity="0.16"/>
                </Grid.Effect>
                <TextBox x:Name="textBox1" HorizontalAlignment="Left" Height="37" Margin="157,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="352" FontSize="18" VerticalContentAlignment="Center"/>
                <TextBox x:Name="textBox3" HorizontalAlignment="Left" Height="37" Margin="661,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="292" VerticalContentAlignment="Center"/>
                <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="661,79,0,0" VerticalAlignment="Top" Width="90" Height="31" VerticalContentAlignment="Center" FontSize="18">
                    <ComboBoxItem Name="cbi1">10</ComboBoxItem>
                    <ComboBoxItem Name="cbi2">20</ComboBoxItem>
                    <ComboBoxItem Name="cbi3">30</ComboBoxItem>
                    <ComboBoxItem Name="cbi4">40</ComboBoxItem>
                    <ComboBoxItem Name="cbi5">50</ComboBoxItem>
                </ComboBox>
                    <Label x:Name="label1" Content="By Date: " HorizontalAlignment="Left" Margin="36,34,0,0" VerticalAlignment="Top" FontSize="18"/>
                <DatePicker HorizontalAlignment="Left" Margin="212,37,0,0" VerticalAlignment="Top" Height="30" Width="130" FontSize="16"/>
                <Label x:Name="label2" Content="From:" HorizontalAlignment="Left" Margin="157,34,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label x:Name="label2_Copy" Content="To:" HorizontalAlignment="Left" Margin="347,34,0,0" VerticalAlignment="Top" FontSize="18"/>
                <DatePicker HorizontalAlignment="Left" Margin="379,37,0,0" VerticalAlignment="Top" Height="30" Width="130" FontSize="16"/>
                <Label x:Name="label1_Copy" Content="By Customer: " HorizontalAlignment="Left" Margin="36,76,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label x:Name="label1_Copy1" Content="By Status: " HorizontalAlignment="Left" Margin="558,34,0,0" VerticalAlignment="Top" FontSize="18"/>
                <Label x:Name="label1_Copy2" Content="Show Last: " HorizontalAlignment="Left" Margin="558,79,0,0" VerticalAlignment="Top" FontSize="18" RenderTransformOrigin="0.919,0.471"/>
                <Label x:Name="label3" Content="entries" HorizontalAlignment="Left" Margin="760,79,0,0" VerticalAlignment="Top" FontSize="18"/>
            </Grid>

            <Grid Background="White" HorizontalAlignment="Left" Height="140" Margin="1244,10,0,800" VerticalAlignment="Center" Width="350">
                <Grid.Effect>
                    <DropShadowEffect Opacity="0.16"/>
                </Grid.Effect>
                <Label x:Name="label1_Copy4" Content="Search:" HorizontalAlignment="Left" Margin="37,27,0,0" VerticalAlignment="Top" FontSize="18"/>
                <TextBox x:Name="textBox3_Copy" HorizontalAlignment="Left" Height="37" Margin="37,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="278" VerticalContentAlignment="Center"/>
            </Grid>
            <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="616" Margin="0,170,0,0" VerticalAlignment="Top" Width="1725">
                <DataGrid.Effect>
                    <DropShadowEffect Opacity="0.16"/>
                </DataGrid.Effect>
            </DataGrid>



        </Grid>
        <Grid x:Name="createTab" Background="White" Visibility="Hidden">
            <Border BorderBrush="Black" Background="#FFECECEC" BorderThickness="1" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="1725">
                <Border.Effect>
                    <DropShadowEffect Opacity="0.16"/>
                </Border.Effect>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="410" Margin="1021,9,0,0" VerticalAlignment="Top" Width="464"/>
            </Border>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="410" Margin="536,10,0,0" VerticalAlignment="Top" Width="464"/>

        </Grid>
    </Grid>
</Page>
